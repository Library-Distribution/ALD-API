Options -Multiviews

RewriteEngine On

RewriteRule ^list$ list.php [L]

RewriteRule ^describe\/([0-9a-fA-F]{32})$ describe.php?id=$1 [L]
RewriteRule ^describe\/(.+)$ describe.php?name=$1 [L]

RewriteRule ^modify\/([0-9a-fA-F]{32})$ modify.php?id=$1 [L]
RewriteRule ^modify\/(.+)$ modify.php?name=$1 [L]

RewriteRule ^registration/init$ register.php?mode=init [L]
RewriteRule ^registration/token/(\d+)$ register.php?mode=token&id=$1 [L]
RewriteRule ^registration/verify/(\d+)$ register.php?mode=verify&id=$1 [L]
